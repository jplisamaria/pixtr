<h2><%= @image.name %></h2>

<% if @image.user == current_user %>
  <nav>
    <%= link_to 'Edit', edit_image_path(@image) %>
    <%= link_to 'Delete', @image,
      method: :delete,
      confirm: "Are you sure you want to delete this image?" %>
  </nav>
<% end %>

<%= image_tag(@image.url, width: 300) %>
<p><%= @image.description %></p>
<p>Added by: <%= link_to @image.user.email, @image.user %></p>
<p>Added on: <%= @image.created_at.to_date %>

<% if signed_in? %>
  <%= form_for([@image, @comment]) do |form| %>
    <%= form.text_area :body %>
    <%= form.submit "Comment" %>
  <% end %>
<% else %>
  <%= link_to "Sign in", sign_in_path %> to comment
<% end %>

<h3>Comments</h3>
<%= render @comments %>
<br>
<%= paginate @comments %>
